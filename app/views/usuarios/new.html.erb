<%= form_for @usuario do |f| %>
<% if @usuario.errors.any? %>
	<h2>Ocorreram erros no cadastro:</h2>
	<ul>
		<% @usuario.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<%end%>
	</ul>
	<%end%>
<table class="alinhar">
			<tr>
				<td><strong>Email *</strong></td>
				<td> <%= f.text_field :email, :required => true %> </td>
			</tr>
			<tr>
				<td><strong>Senha *</strong></td>
				<td> <%= f.text_field :password, :required => true %></td>
			</tr>
			<tr>
				<td><strong>Confirmar Senha *</strong></td>
				<td> <%= f.text_field :password_confirmation, :required => true  %> </td>
			</tr>
			<tr>
				<td><strong>Tipo</strong></td>
				<td> <%= f.select :tipo, ([["Agenciador", "agenciador"], ["Floricultura", "floricultura"]]) %> </td>
			</tr>
			
			<tr>
				<td><%= f.submit %></td>
			</tr>
		</table>
		<% end %>
