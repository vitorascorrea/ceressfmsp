<div class="container_secao">
	<div id="caixa_login">
		<%= form_tag(sessions_path) do %>
		
		<%flash.each do |nome, msg|%>
			<%= content_tag :div, msg, id: "flash_#{nome}"%>
		<% end %>
		<table class="alinhar" align="center">
			<th><h2>Formulario de Login</h2></th>
			<tr>
				<td><strong>Usu√°rio:</strong></td>
				<td> <%= text_field_tag :email, params[:email] %> </td>
			</tr>
			<tr>
				<td><strong>Senha:</strong></td>
				<td> <%= password_field_tag :password %> </td>
			</tr>
		</table>
		<strong><%= submit_tag "Logar", :class => 'big_button' %></strong>
		<% end %>
	</div>
</div>
